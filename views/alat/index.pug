extends ../layout/master.pug

block content
    .row.row-cards.row-deck
        .col-12
            .card
                .card-header
                     a.btn.btn-primary.btn-lg(href=base_url+'alat/create')
                        i.fe.fe-plus(data-toggle='tooltip')
                        |Tambah Alat
                .card-body
                    .table-responsive
                        table.table.table-hover.table-outline.table-vcenter.text-nowrap.card-table
                          thead
                            tr
                                th No
                                th Code Alat
                                th Nama Alat
                                th Deskripsi
                                th.text-center
                                    i.icon-settings
                            tbody
                             each data, index in alat
                                tr
                                    td= index+1
                                    td= data.code_alat
                                    td= data.nama_alat
                                    td= data.deskripsi
                                    td
                                        form(method='post' action=base_url+'alat/destroy/'+data.id_alat id='form-delete')
                                            a.btn.btn-primary.btn-sm(href=base_url+'alat/edit/'+data.id_alat)
                                                i.fe.fe-edit
                                            button.btn.btn-danger.btn-sm(type='submit')
                                                i.fe.fe-trash
                            