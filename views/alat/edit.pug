extends ../layout/master.pug

block content
    .row.row-cards.row-deck
        .col-12
            .card
                .card-header
                    h3.card-title Form Alat
                .card-body
                    form(method='post' action=base_url+'alat/update/'+data.id_alat)
                        .form-group
                            label.form-label Code alat
                            input.form-control(name='code_alat' placeholder='Masukkan kode alat' value=data.code_alat)
                        .form-group
                            label.form-label Nama alat
                            input.form-control(name='nama_alat' placeholder='Masukkan Nama alat' value=data.nama_alat)
                        .form-group
                            label.form-label Deskripsi alat
                            textarea.form-control(name='deskripsi') #{data.deskripsi}
                        .form-group
                            button.btn.btn-success.btn-lg(type='submit') Update