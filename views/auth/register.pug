extends layout.pug

block content
	.col.col-login.mx-auto
		.text-center.mb-6
		img.h-6(src='./assets/brand/tabler.svg' alt='')
		form.card(action='#' method='post')
			.card-body.p-6
				.card-title Create new account
				.form-group
					label.form-label Name
					input.form-control(type='text' placeholder='Enter name')
				.form-group
					label.form-label Email address
					input.form-control(type='email' placeholder='Enter email')
				.form-group
					label.form-label Password
					input.form-control(type='password' placeholder='Password')
				.form-group
					label.custom-control.custom-checkbox
						input.custom-control-input(type='checkbox')
						span.custom-control-label
							| Agree the 
							a(href='terms.html') terms and policy
				.form-footer
					button.btn.btn-primary.btn-block(type='submit') Create new account
		.text-center.text-muted
			| Already have account? 
			a(href='/auth') Sign in
