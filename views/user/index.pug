extends ../layout/master.pug

block content
    .row.row-cards.row-deck
        .col-12
            .card
                .card-header
                     a.btn.btn-primary.btn-lg(href=base_url+'users/create')
                        i.fe.fe-plus(data-toggle='tooltip')
                        |Tambah User
                .card-body
                    .table-responsive
                        table.table.table-hover.table-outline.table-vcenter.text-nowrap.card-table
                          thead
                            tr
                                th No
                                th Name
                                th Email
                                th.text-center
                                    i.icon-settings
                            tbody
                             each data, index in users
                                tr
                                    td= index+1
                                    td= data.name
                                    td= data.email
                                    td
                                        form(method='post' action=base_url+'users/destroy/'+data.id_users id='form-delete')
                                            a.btn.btn-primary.btn-sm(href=base_url+'users/edit/'+data.id_users)
                                                i.fe.fe-edit
                                            button.btn.btn-danger.btn-sm(type='submit')
                                                i.fe.fe-trash
                            