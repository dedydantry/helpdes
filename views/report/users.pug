extends ../layout/master.pug

block content
    .page-header
        h1.page-title
            | Report
        .page-options.d-flex
            .input-icon.ml-2
                a.btn.btn-secondary(href=base_url+'report/printuser' title="Export to Excel" style="margin-right:5px;") 
                    i.fa.fa-print
                    | &nbsp print
    .row.row-cards.row-deck
        .col-12
            .card
                .card-header
                    .h3.card-title Report By Users
                .card-body
                    .table-responsive
                        table.table.table-hover.table-outline.table-vcenter.text-nowrap.card-table
                            thead
                                tr
                                    th(scope="col") No
                                    th(scope="col") Email
                                    th(scope="col") Total Ticket
                                    th(scope="col") Action
                            tbody
                                -var klass,cls;
                                each data, key in ticket
                                    tr
                                        td=(key+1)
                                        td=data.user.email
                                        td=data.jumlah
                                        td
                                            a.btn.btn-secondary.btn-sm(href=base_url+'report/userdetails/'+data.owner) Detail